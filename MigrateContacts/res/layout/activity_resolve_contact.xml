<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <TextView
            android:id="@+id/activity_resolve_fname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/detail_fname_label"
            android:textSize="24sp"
            android:textStyle="bold" />
    <TextView
            android:id="@+id/activity_resolve_fname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_resolve_fname_label"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/activity_resolve_fname_label"
            android:hint="@string/detail_fname_hint"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            />
    <Spinner
            android:id="@+id/activity_resolve_fname_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_resolve_fname_label"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/activity_resolve_fname_label"
            android:hint="@string/detail_fname_hint"
            android:textSize="18sp"
            android:visibility="gone"
            />


    <TextView
            android:id="@+id/activity_resolve_lname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/activity_resolve_fname_label"
            android:text="@string/detail_lname_label"
            android:textSize="24sp"
            android:textStyle="bold" />
    <TextView
            android:id="@+id/activity_resolve_lname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_resolve_lname_label"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/activity_resolve_lname_label"
            android:hint="@string/detail_lname_hint"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            />
    <Spinner
            android:id="@+id/activity_resolve_lname_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_resolve_lname_label"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/activity_resolve_lname_label"
            android:hint="@string/detail_lname_hint"
            android:textSize="18sp"
            android:visibility="gone"
            />


    <TextView
            android:id="@+id/activity_resolve_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/activity_resolve_lname_label"
            android:layout_marginTop="4dip"
            android:text="@string/detail_phone_label"
            android:textSize="24sp"
            android:textStyle="bold" />
    <TextView
            android:id="@+id/activity_resolve_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_resolve_phone_label"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@+id/activity_resolve_phone_label"
            android:hint="@string/detail_phone_hint"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            />
    <Spinner
            android:id="@+id/activity_resolve_phone_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_resolve_phone_label"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@+id/activity_resolve_phone_label"
            android:hint="@string/detail_phone_hint"
            android:textSize="18sp"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/activity_resolve_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/activity_resolve_phone_label"
            android:layout_marginTop="6dip"
            android:text="@string/detail_email_label"
            android:textSize="24sp"
            android:textStyle="bold" />
    <TextView
            android:id="@+id/activity_resolve_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/activity_resolve_email_label"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/activity_resolve_email_label"
            android:hint="@string/detail_email_hint"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            />
    <Spinner
            android:id="@+id/activity_resolve_email_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/activity_resolve_email_label"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/activity_resolve_email_label"
            android:hint="@string/detail_email_hint"
            android:textSize="18sp"
            android:visibility="gone"
            />

    <Button
            android:id="@+id/activity_resolve_merge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/resolve_update" />

</RelativeLayout>
